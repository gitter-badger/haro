{
  "name": "haro",
  "version": "1.0.8",
  "description": "Har≈ç is a modern immutable DataStore that can be wired to an API",
  "main": "buid/server/index.js",
  "scripts": {
    "lint": "eslint src",
    "clean": "rm -rf build/* && mkdir build/public && mkdir build/server && mkdir build/client",
    "build-server": "babel -d build/server src/server -s",
    "build-client": "browserify src/client/index.js -t babelify --outfile build/client/bundle.js",
    "build": "npm run clean && npm run build-server && npm run build-client",
    "nodeunit": "nodeunit test/haro_test.js",
    "test": "npm run lint && npm run nodeunit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/avoidwork/haro.git"
  },
  "keywords": [
    "immutable",
    "data",
    "store",
    "datastore",
    "api"
  ],
  "author": "Jason Mulligan <jason.mulligan@avoidwork.com>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/avoidwork/haro/issues"
  },
  "homepage": "http://haro.rocks",
  "devDependencies": {
    "babel": "^5.4.7",
    "babel-eslint": "^3.1.9",
    "babelify": "^6.1.2",
    "browserify": "^10.2.3",
    "eslint": "^0.22.1",
    "nodeunit": "^0.9.1",
    "tenso": "^1.5.1"
  },
  "dependencies": {
    "core-js": "^0.9.13",
    "node-fetch": "^1.2.1",
    "tiny-tuple": "^1.0.5"
  }
}
